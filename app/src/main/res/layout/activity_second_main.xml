<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sebanes.sebanesquiz1.SecondMain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android: Oreo"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/oreo"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Oreo"
        android:layout_marginLeft="170dp"
        android:textSize="22dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Version 8"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="150dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="API 26"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="160dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Released August 21, 2017"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="90dp"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/home"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="20dp"
        android:text="Home"
        android:onClick="goToHome"/>

    <Button
        android:id="@+id/one"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="100dp"
        android:text="1"/>

    <Button
        android:id="@+id/two"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="180dp"
        android:text="2"
        android:onClick="goToTwo"/>

    <Button
        android:id="@+id/three"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="260dp"
        android:text="3"
        android:onClick="goToThree"/>

</RelativeLayout>
